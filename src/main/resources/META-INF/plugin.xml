<idea-plugin>
    <id>com.example.TestPlugin</id>
    <name>TestPlugin</name>
    <vendor email="matti.maikalainen@yritys.com" url="https://www.yritys.com">yritys</vendor>

    <description><![CDATA[
    My first IntelliJ plugin. lorem ipsum need 40 chars for description.
    ]]></description>

    <!-- Compatibility -->
    <idea-version since-build="231" until-build="231.*" />

    <!-- Dependencies -->
    <depends>com.intellij.modules.java</depends>

    <!-- Tool Window -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Test Plugin Tool Window"
                    factoryClass="com.example.LoginWindowFactory"
                    anchor="left"
                    canCloseContents="true"
        />
        <toolWindow id="Course Task"
                    factoryClass="com.example.CoursePaneWindowFactory"
                    anchor="right"
                    canCloseContents="true"
        />
        <fileEditorProvider implementation="com.example.MyCustomFileEditorProvider"/>
    </extensions>


    <!-- Actions -->
    <actions>
        <action id="MyPlugin.OpenCustomView"
                class="com.example.OpenCustomEditorAction"
                text="Open Custom View"
                description="Opens the custom view in the editor">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        <group class="com.example.actions.MyMenuActionGroup"
               id="TIM.Menu"
               text="TIM"
               description="Tim menu"
               popup="true"
               compact="true">
            <action id="MyPlugin.MyFirstAction" class="com.example.actions.MyFirstAction" text="My Action" description="My action" />

            <!-- Add TIM group to MainMenu, after the 'HelpMenu' -->
            <add-to-group group-id="MainMenu" anchor="last" />
        </group>


    </actions>


</idea-plugin>