<idea-plugin>
    <id>com.views.TIDE-JetBrains</id>
    <name>TIDE</name>
    <vendor email="matti.maikalainen@yritys.com" url="https://www.yritys.com">yritys</vendor>

    <description><![CDATA[
    My first IntelliJ plugin. lorem ipsum need 40 chars for description.
    ]]></description>

    <!-- Compatibility -->
    <idea-version since-build="231" until-build="231.*" />

    <!-- Dependencies -->
    <depends>com.intellij.modules.java</depends>

    <!-- Tool Window -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="TIDE Tool Window"
                    factoryClass="com.factories.LoginWindowFactory"
                    anchor="left"
                    canCloseContents="true"
        />
        <toolWindow id="Course Task"
                    factoryClass="com.factories.CoursePaneWindowFactory"
                    anchor="right"
                    canCloseContents="true"
        />
        <toolWindow id="Output Window"
                    anchor="bottom"
                    factoryClass="com.factories.OutputWindowFactory"
                    canCloseContents="true"
        />
        <fileEditorProvider implementation="com.factories.MyCustomFileEditorProvider"/>
        <applicationService serviceImplementation="com.actions.StateManager"/>
        <applicationService serviceImplementation="com.actions.ActiveStateManager"/>
        <applicationConfigurable
            parentId="tools"
            instance="com.actions.AppSettingsConfigurable"
            id="com.actions.AppSettingsConfigurable"
            displayName="TIDE settings"/>
    </extensions>
    <actions>
        <action id="MyPlugin.OpenCustomView"
                class="com.actions.OpenCustomEditorAction"
                text="Open Custom View"
                description="Opens the custom view in the editor">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        <group
                id="org.intellij.sdk.action.GroupedActions"
                text="Tide"
                popup="true"
                >
        <add-to-group
                group-id="MainMenu"
                anchor="last"
                />
            <action id="com.actions.About" class="com.actions.About" text="TIDE" description="TIDE menu">
            </action>
            <action id="com.actions.Settings" class="com.actions.Settings" text="Settings" description="Tide settings">
            </action>
            <action id="com.actions.ResetExercise" class="com.actions.ResetExercise" text="Reset Exercise" description="Reset current exercise">
            </action>
        </group>

    </actions>
    <applicationListeners>
        <listener class="com.listeners.LoginWindowListener"
                  topic="com.intellij.openapi.wm.ex.ToolWindowManagerListener"/>
    </applicationListeners>
</idea-plugin>